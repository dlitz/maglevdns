require 'optparse'
require 'maglevdns'

def exit_usage(opts, rc=1)
  puts opts
  exit rc
end

options = { :listener_factory_lambdas => [] }
opts = OptionParser.new do |opts|
  opts.banner = "Usage: #{$0} [options]"
  opts.separator ""
  opts.separator "Specific options"
  opts.on("--script FILE", "Start a simple script") do |optarg|
    options[:script] = optarg
  end
  opts.on("--listen HOST,PORT", "Listen on the specified host/port combination") do |optarg|
    host, port = optarg.split(",")
    ipaddr = IPAddr.new(host)
    options[:listener_factory_lambdas] << lambda { |request_queue|
      MaglevDNS::UDPListenerThread.new(
        :request_queue => request_queue,
        :address_family => ipaddr.family,
        :host => ipaddr.to_s,
        :port => port
      )
    }
    options[:listener_factory_lambdas] << lambda { |request_queue|
      MaglevDNS::TCPListenerThread.new(
        :request_queue => request_queue,
        :address_family => ipaddr.family,
        :host => ipaddr.to_s,
        :port => port
      )
    }
  end
  opts.on_tail("-h", "--help", "Show this help") do
    exit_usage(opts, 0)
  end
end
opts.parse!
unless ARGV.empty?
  $stderr.puts "#{$0}: error: This program does not accept arguments"
  exit_usage(opts)
end
if options[:listener_factory_lambdas].empty?
  $stderr.puts "#{$0}: error: No listeners specified"
  exit_usage(opts)
end
if options[:script].nil?
  $stderr.puts "#{$0}: error: No script specified"
  exit_usage(opts)
end

Thread.abort_on_exception = true
options[:request_handler] = MaglevDNS::RequestHandler.new(options[:script])
server = MaglevDNS::Server.new(options)
server.start
server.join

# vim:set ts=2 sw=2 sts=2 expandtab:
